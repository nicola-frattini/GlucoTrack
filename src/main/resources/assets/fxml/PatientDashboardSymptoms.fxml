<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent; -fx-background: transparent;" xmlns:fx="http://javafx.com/fxml" fx:controller="it.glucotrack.controller.PatientDashboardSymptomsController" stylesheets="@/assets/css/Style.css">
    <content>
    <VBox spacing="20" styleClass="main-bg-dark">
        <padding>
            <Insets top="30" right="30" bottom="30" left="30"/>
        </padding>
            <children>
                <!-- Header Section -->
                <HBox alignment="CENTER_LEFT" spacing="20.0">
                    <padding>
                        <Insets top="30" right="40" bottom="20" left="40"/>
                    </padding>
                    <children>
                        <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Symptoms" styleClass="primary-text bold large">
                                    <font>
                                        <Font name="System Bold" size="28.0" />
                                    </font>
                                </Label>
                                <Label text="A chronological list of your recorded symptoms." styleClass="secondary-text medium">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>

            <Button fx:id="addNewSymptomBtn" mnemonicParsing="false" styleClass="button-accent" text="Add New Symptom" />
                    </children>
                </HBox>

                <!-- Symptom History Section -->
                <VBox spacing="15.0" styleClass="main-bg-dark" style="-fx-background-radius: 15;">
                    <padding>
                        <Insets top="0" right="40" bottom="40" left="40"/>
                    </padding>
                    <children>
                        <Label text="Symptom History" styleClass="primary-text bold medium">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>

                        <!-- Symptoms History Table -->
                        <TableView fx:id="symptomsTable" prefHeight="450.0" styleClass="table-view-dark">
                            <columns>
                                <TableColumn fx:id="dateRecordedColumn" prefWidth="180.0" text="Date Recorded" />
                                <TableColumn fx:id="symptomColumn" prefWidth="200.0" text="Symptom" />
                                <TableColumn fx:id="severityColumn" prefWidth="120.0" text="Severity" />
                                <TableColumn fx:id="durationColumn" prefWidth="150.0" text="Duration" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>

                    </children>
                </VBox>
            </children>
        </VBox>
    </content>
</ScrollPane>