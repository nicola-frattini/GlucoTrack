<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent; -fx-background: transparent;" xmlns:fx="http://javafx.com/fxml" fx:controller="it.glucotrack.controller.PatientDashboardSymptomsController" stylesheets="@/assets/css/table-styles.css">
    <content>
        <VBox spacing="20" style="-fx-padding: 30;">
            <children>
                <!-- Header Section -->
                <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-padding: 30 40 20 40;">
                    <children>
                        <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Symptoms" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="28.0" />
                                    </font>
                                </Label>
                                <Label text="A chronological list of your recorded symptoms." textFill="#BDC3C7">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>

                        <Button fx:id="addNewSymptomBtn" mnemonicParsing="false"
                                style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-padding: 12 20; -fx-background-radius: 5;"
                                text="âŠ• Add New Symptom" />
                    </children>
                </HBox>

                <!-- Symptom History Section -->
                <VBox spacing="15.0" style="-fx-padding: 0 40 40 40;">
                    <children>
                        <Label text="Symptom History" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>

                        <!-- Symptoms History Table -->
                        <TableView fx:id="symptomsTable" prefHeight="450.0"
                                   style="-fx-background-color: #2C3E50; -fx-table-color: #2C3E50;">
                            <columns>
                                <TableColumn fx:id="dateRecordedColumn" prefWidth="180.0" text="Date Recorded" />
                                <TableColumn fx:id="symptomColumn" prefWidth="200.0" text="Symptom" />
                                <TableColumn fx:id="severityColumn" prefWidth="120.0" text="Severity" />
                                <TableColumn fx:id="durationColumn" prefWidth="150.0" text="Duration" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </VBox>
    </content>
</ScrollPane>