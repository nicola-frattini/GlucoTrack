<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:controller="it.glucotrack.controller.DoctorDashboardMedicationsController"
            xmlns:fx="http://javafx.com/fxml"
            stylesheets="@/assets/css/table-styles.css"
            style="-fx-background-color: transparent;">

    <children>
        <VBox spacing="20" style="-fx-padding: 30;">
            <!-- Header Section -->
            <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-padding: 30 40 20 40;">
                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <Label text="Medications" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="28.0" />
                        </font>
                    </Label>
                    <Label text="All the medications you prescribed" textFill="#BDC3C7">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                </VBox>
                <Button fx:id="logMedicationBtn" mnemonicParsing="false" text="Log Medication"
                        style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-padding: 12 20; -fx-background-radius: 5;"
                        onAction="#onInsertMedication"/>
            </HBox>

            <!-- Prescribed Medications Section -->
            <VBox spacing="15.0" style="-fx-padding: 0 40 30 40;" >
                <Label text="Prescribed Medications" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>

                <!-- Medications Table -->
                <TableView fx:id="prescribedMedicationsTable" prefHeight="600.0"
                           style="-fx-background-color: #2C3E50;">
                    <columns>
                        <TableColumn fx:id="patientFullNameColumn" prefWidth="250.0" text="Patient" />
                        <TableColumn fx:id="medicationNameColumn" prefWidth="200.0" text="Medication Name" />
                        <TableColumn fx:id="dosageColumn" prefWidth="150.0" text="Dosage" />
                        <TableColumn fx:id="frequencyColumn" prefWidth="200.0" text="Frequency" />
                        <TableColumn fx:id="instructionsColumn" prefWidth="350.0" text="Instructions" />
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </children>
</AnchorPane>
