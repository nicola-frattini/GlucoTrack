<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.chart.*?>

<BorderPane fx:id="rootPane"
            xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.glucotrack.controller.DoctorDashboardController"
            styleClass="main-bg-dark"
            stylesheets="@/assets/css/Style.css">

    <!-- Sidebar sinistra -->
    <left>
        <VBox styleClass="card-dark" prefWidth="250" spacing="5">
            <padding>
                <Insets top="20" bottom="20" left="20" right="20" />
            </padding>

            <!-- Profilo utente -->
            <Button fx:id="profileBtn" onAction="#onProfileClick"
                    styleClass="input-dark"
                    prefWidth="210">
                <graphic>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label style="-fx-font-size: 32px;" />
                        <VBox>
                            <Label fx:id="doctorNameLabel" styleClass="primary-text"/>
                            <Label fx:id="doctorRoleLabel" styleClass="secondary-text"/>
                        </VBox>
                    </HBox>
                </graphic>
            </Button>

            <!-- Menu di navigazione -->
            <VBox spacing="5" style="-fx-padding: 10 0;">
                <Button fx:id="dashboardBtn" text="Dashboard"
                        styleClass="nav-button"
                        onAction="#onDashboardClick" prefWidth="210" />

                <Button fx:id="patientsBtn" text="Patients"
                        styleClass="nav-button"
                        onAction="#onPatientsClick" prefWidth="210" />

                <Button fx:id="medicationsBtn" text="Therapies"
                        styleClass="nav-button"
                        onAction="#onMedicationsClick" prefWidth="210" />
            </VBox>

            <Region VBox.vgrow="ALWAYS"/>

            <VBox spacing="5">
                <Button fx:id="logoutBtn" text="Logout"
                        styleClass="nav-button"
                        onAction="#onLogoutClick" prefWidth="210" />
            </VBox>
        </VBox>
    </left>
    <center>
        <StackPane fx:id="contentPane"/>
    </center>
</BorderPane>