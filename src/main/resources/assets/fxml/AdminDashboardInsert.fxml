<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<HBox xmlns="http://javafx.com/javafx/11.0.1"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="it.glucotrack.controller.AdminDashboardInsertController"
    stylesheets="@/assets/css/Style.css"
    alignment="CENTER"
    styleClass="main-bg-dark">

    <children>
    <VBox alignment="CENTER" spacing="20.0" styleClass="card-dark" maxWidth="500">
        <children>
            <!-- Header -->
            <VBox alignment="CENTER" spacing="5.0">
                <children>
                    <Label text="Add a new User" styleClass="primary-title" />
                    <Label text="Insert the user's data." styleClass="secondary-label" />
                </children>
            </VBox>

            <!-- Form fields -->
            <VBox spacing="15.0" maxWidth="500.0" alignment="CENTER" styleClass="card-dark" style="-fx-padding: 20 30 30 30;">
                <children>
                    <!-- Account Type Selection (First) -->
                    <ComboBox fx:id="accountTypeComboBox"
                              promptText="Select Account Type"
                              styleClass="combo-box-dark"
                              maxWidth="Infinity" />

                    <!-- Basic Information -->
                    <VBox fx:id="basicInfoContainer" spacing="15.0">
                        <children>
                            <!-- Row 1: Name and Surname -->
                            <HBox spacing="10.0">
                                <children>
                                    <TextField fx:id="firstNameField"
                                               promptText="First Name"
                                               styleClass="input-dark"
                                               HBox.hgrow="ALWAYS">
                                        <font>
                                            <Font size="14.0" />
                                        </font>
                                    </TextField>
                                    <TextField fx:id="lastNameField"
                                               promptText="Last Name"
                                               styleClass="input-dark"
                                               HBox.hgrow="ALWAYS">
                                        <font>
                                            <Font size="14.0" />
                                        </font>
                                    </TextField>
                                </children>
                            </HBox>

                                <!-- Row 2: Email -->
                            <TextField fx:id="emailField"
                                       promptText="Email"
                                       styleClass="input-dark">
                                <font>
                                    <Font size="14.0" />
                                </font>
                            </TextField>

                            <!-- Row 3: Phone -->
                            <TextField fx:id="phoneField"
                                       promptText="Phone Number"
                                       styleClass="input-dark">
                                <font>
                                    <Font size="14.0" />
                                </font>
                            </TextField>

                            <!-- Row 4: Gender and Date -->
                            <HBox spacing="10.0">
                                <children>
                                    <ComboBox fx:id="genderComboBox"
                                              promptText="Gender"
                                              styleClass="combo-box-dark"
                                              HBox.hgrow="ALWAYS" />
                                    <DatePicker fx:id="birthDatePicker"
                                                promptText="Birth Date"
                                                styleClass="date-picker-dark"
                                                HBox.hgrow="ALWAYS" />
                                </children>
                            </HBox>

                            <!-- Row 5: Birth Place and Fiscal Code -->
                            <HBox spacing="10.0">
                                <children>
                                    <TextField fx:id="birthPlaceField"
                                               promptText="Birth Place"
                                               styleClass="input-dark"
                                               HBox.hgrow="ALWAYS">
                                        <font>
                                            <Font size="14.0" />
                                        </font>
                                    </TextField>
                                    <TextField fx:id="fiscalCodeField"
                                               promptText="Fiscal Code"
                                               styleClass="input-dark"
                                               HBox.hgrow="ALWAYS">
                                        <font>
                                            <Font size="14.0" />
                                        </font>
                                    </TextField>
                                </children>
                            </HBox>
                        </children>
                    </VBox>

                    <!-- Doctor-specific fields -->
                    <VBox fx:id="doctorFieldsContainer" spacing="15.0" visible="false" managed="false">
                        <children>
                            <Label text="Doctor Information" styleClass="section-title" />
                            <TextField fx:id="specializationField"
                                       promptText="Medical Specialization"
                                       styleClass="input-dark">
                                <font>
                                    <Font size="14.0" />
                                </font>
                            </TextField>
                        </children>
                    </VBox>

                    <!-- Patient-specific fields -->
                    <VBox fx:id="patientFieldsContainer" spacing="15.0" visible="false" managed="false">
                        <children>
                            <Label text="Patient Information" styleClass="section-title" />
                            <ComboBox fx:id="referringDoctorComboBox"
                                      promptText="Select Referring Doctor"
                                      styleClass="combo-box-dark"
                                      maxWidth="Infinity" />
                        </children>
                    </VBox>

                    <!-- Admin-specific fields -->
                    <VBox fx:id="adminFieldsContainer" spacing="15.0" visible="false" managed="false">
                        <children>
                            <Label text="Admin Information" styleClass="section-title" />
                            <TextField fx:id="adminRoleField"
                                       promptText="Admin Role"
                                       styleClass="input-dark">
                                <font>
                                    <Font size="14.0" />
                                </font>
                            </TextField>
                        </children>
                    </VBox>

                    <!-- Password fields -->
                    <VBox spacing="15.0">
                        <children>
                            <PasswordField fx:id="passwordField"
                                           promptText="Password"
                                           styleClass="input-dark">
                                <font>
                                    <Font size="14.0" />
                                </font>
                            </PasswordField>
                            <PasswordField fx:id="confirmPasswordField"
                                           promptText="Confirm Password"
                                           styleClass="input-dark">
                                <font>
                                    <Font size="14.0" />
                                </font>
                            </PasswordField>
                        </children>
                    </VBox>

                    <!-- Create Account Button -->
                    <Button fx:id="registerButton"
                            text="Create Account"
                            prefHeight="50.0"
                            maxWidth="Infinity"
                            styleClass="primary-btn">
                    </Button>

                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</HBox>