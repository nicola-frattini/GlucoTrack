<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<HBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="it.glucotrack.controller.LoginController"
    stylesheets="@../css/register-styles.css">
        <children>
        <!-- Sezione sinistra - Form di login -->
        <VBox alignment="CENTER" style="-fx-background-color: #2c3e50;" spacing="30.0" HBox.hgrow="ALWAYS">
            <children>
                <!-- Header -->
                <VBox alignment="CENTER" spacing="5.0">
                    <children>
                        <Label text="Welcome Back" textFill="#ecf0f1">
                            <font>
                                <Font name="System Bold" size="28.0" />
                            </font>
                        </Label>
                        <Label text="Login to access your GlucoTrack account" textFill="#7f8c8d">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <!-- Form fields -->
                <VBox spacing="15.0" maxWidth="400.0" alignment="CENTER">
                    <children>
                        <!-- Username -->
                        <TextField fx:id="emailField"
                                   promptText="ðŸ‘¤ Email"
                                   style="-fx-background-color: #34495e; -fx-text-fill: #ecf0f1; -fx-prompt-text-fill: #7f8c8d; -fx-border-color: #3498db; -fx-border-width: 0 0 2 0; -fx-background-radius: 0; -fx-border-radius: 0; -fx-padding: 15;">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </TextField>

                        <!-- Password -->
                        <PasswordField fx:id="passwordField"
                                       promptText="ðŸ”’ Password"
                                       style="-fx-background-color: #34495e; -fx-text-fill: #ecf0f1; -fx-prompt-text-fill: #7f8c8d; -fx-border-color: #3498db; -fx-border-width: 0 0 2 0; -fx-background-radius: 0; -fx-border-radius: 0; -fx-padding: 15;">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </PasswordField>

                        <!-- Remember me checkbox -->
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <CheckBox fx:id="rememberMeCheckBox" style="-fx-text-fill: #ecf0f1;" />
                                <Label text="Remember me" textFill="#7f8c8d">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                            </children>
                        </HBox>

                        <!-- Login Button -->
                        <Button fx:id="loginButton"
                                text="Log In"
                                prefHeight="50.0"
                                maxWidth="Infinity"
                                style="-fx-background-color: linear-gradient(to bottom, #3498db, #2980b9); -fx-text-fill: white; -fx-background-radius: 25; -fx-font-weight: bold; -fx-font-size: 16px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 2);">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Button>

                        <!-- Sign up link -->
                        <HBox alignment="CENTER" spacing="5.0">
                            <children>
                                <Label text="Don't have an account?" textFill="#7f8c8d">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                                <Label fx:id="signUpLabel" text="Sign up" textFill="#3498db" underline="true" style="-fx-cursor: hand;">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>

        <!-- Sezione destra - Branding -->
        <VBox alignment="CENTER" style="-fx-background-color: #7f8c8d;" spacing="20.0" prefWidth="700" maxWidth="700">
            <children>
                <HBox alignment="CENTER" spacing="15.0">
                    <children>
                        <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="/assets/icons/Logo.png" />
                            </image>
                        </ImageView>
                        <Label text="GlucoTrack" textFill="white">
                            <font>
                                <Font name="System Bold" size="32.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>

                <Label alignment="CENTER" text="Connecting patients and diabetologists for better diabetes management" textAlignment="CENTER" textFill="#ecf0f1" wrapText="true" maxWidth="550.0">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
            </padding>
        </VBox>
    </children>
</HBox>