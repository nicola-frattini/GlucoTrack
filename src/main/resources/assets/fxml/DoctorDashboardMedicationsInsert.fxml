<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane style="-fx-background-color: #2C3E50;" xmlns:fx="http://javafx.com/fxml" fx:controller="it.glucotrack.controller.DoctorDashboardMedicationsInsertController" fitToWidth="true" fitToHeight="true" stylesheets="@/assets/css/Style.css">
    <VBox styleClass="main-bg-dark" spacing="0">

        <!-- Header Section -->
    <VBox spacing="10.0" styleClass="main-bg-dark" style="-fx-padding: 30 40 20 40;">
            <children>
                <Label text="New Medication" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                </Label>
                <Label text="Fill out the form to prescribe a new medication" textFill="#BDC3C7">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
            </children>
        </VBox>

        <!-- Main Form Container -->
    <VBox spacing="20.0" style="-fx-padding: 0 40 40 40;" VBox.vgrow="ALWAYS">
            <children>

                <!-- Form Card -->
                <VBox spacing="25.0" styleClass="card-dark">
                    <children>

                        <!-- Patient Selection Row -->
                        <VBox spacing="8.0">
                            <children>
                                <Label text="Patient *" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <ComboBox fx:id="patientComboBox" prefWidth="400.0" promptText="Select patient..."
                                          styleClass="combo-box-dark">
                                </ComboBox>
                            </children>
                        </VBox>

                        <!-- Medication Details Row -->
                        <HBox spacing="20.0">
                            <children>
                                <!-- Medication Name -->
                                <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label text="Medication Name *" textFill="WHITE">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Label>
                                        <TextField fx:id="medicationNameField" prefWidth="300.0" promptText="Enter medication name..."
                                                   styleClass="input-dark">
                                        </TextField>
                                    </children>
                                </VBox>

                                <!-- Dosage -->
                                <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label text="Dosage *" textFill="WHITE">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Label>
                                        <TextField fx:id="dosageField" prefWidth="200.0" promptText="e.g., 500mg, 10ml..."
                                                   styleClass="input-dark">
                                        </TextField>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>

                        <!-- Frequency Row -->
                        <VBox spacing="8.0">
                            <children>
                                <Label text="Frequency *" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <ComboBox fx:id="frequencyComboBox" prefWidth="300.0" promptText="Select frequency..."
                                          styleClass="combo-box-dark">
                                </ComboBox>
                            </children>
                        </VBox>

                        <!-- Date Range Row -->
                        <HBox spacing="20.0">
                            <children>
                                <!-- Start Date -->
                                <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label text="Start Date *" textFill="WHITE">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Label>
                                        <DatePicker fx:id="startDatePicker" prefWidth="200.0"
                                                    styleClass="date-picker-dark">
                                        </DatePicker>
                                    </children>
                                </VBox>

                                <!-- End Date -->
                                <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label text="End Date" textFill="WHITE">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Label>
                                        <DatePicker fx:id="endDatePicker" prefWidth="200.0" promptText="End date *"
                                                    styleClass="date-picker-dark">
                                        </DatePicker>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>

                        <!-- Notes Section -->
                        <VBox spacing="8.0">
                            <children>
                                <Label text="Notes" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <TextArea fx:id="notesTextArea" prefHeight="100.0" prefWidth="600.0" wrapText="true"
                                          promptText="Optional notes or special instructions..."
                                          styleClass="input-dark">
                                </TextArea>
                                <Label text="Maximum 500 characters" textFill="#95A5A6">
                                    <font>
                                        <Font size="11.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>

                        <!-- Required Fields Notice -->
                        <Label text="* Required fields" textFill="#95A5A6">
                            <font>
                                <Font size="11.0" />
                            </font>
                        </Label>

                    </children>
                </VBox>

                <!-- Action Buttons -->
                <HBox alignment="CENTER_RIGHT" spacing="15.0" style="-fx-padding: 20 0 0 0;">
                    <children>
                        <!-- Cancel Button -->
                        <Button fx:id="cancelButton" onAction="#handleCancel" mnemonicParsing="false" prefHeight="40.0" prefWidth="120.0"
                            styleClass="secondary-btn"
                            text="Cancel" />

                        <!-- Prescribe Button -->
                        <Button fx:id="prescribeButton" onAction="#handlePrescribe" mnemonicParsing="false" prefHeight="40.0" prefWidth="140.0"
                            styleClass="primary-btn"
                            text="Prescribe" />
                    </children>
                </HBox>

            </children>
        </VBox>

    </VBox>
</ScrollPane>