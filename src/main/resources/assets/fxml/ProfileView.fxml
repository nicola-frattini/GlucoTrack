<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.shape.*?>

<ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent; -fx-background: transparent;" xmlns:fx="http://javafx.com/fxml" fx:controller="it.glucotrack.controller.ProfileViewController">
    <content>
        <VBox style="-fx-background-color: #34495E;" stylesheets="@../css/dashboard-styles.css">
            <children>
                <!-- Header Section -->
                <VBox spacing="10.0" style="-fx-padding: 30 40 20 40;">
                    <children>
                        <Label text="Patient Profile" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="28.0" />
                            </font>
                        </Label>
                        <Label text="View and manage patient information" textFill="#BDC3C7">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <!-- Patient Info Section -->
                <HBox spacing="20.0" style="-fx-padding: 0 40 30 40;">
                    <children>
                        <!-- Profile Image -->
                        <VBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Circle fx:id="profileImageCircle" radius="50.0" fill="#3498DB" stroke="#2C3E50" strokeWidth="3.0" />
                                <ImageView fx:id="profileImageView" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" visible="false">
                                    <clip>
                                        <Circle radius="50.0" />
                                    </clip>
                                </ImageView>
                            </children>
                        </VBox>
                        
                        <!-- Patient Details -->
                        <VBox spacing="8.0" VBox.vgrow="ALWAYS">
                            <children>
                                <Label fx:id="patientNameLabel" text="Sophia Bennett" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="22.0" />
                                    </font>
                                </Label>
                                <Label fx:id="patientIdLabel" text="Patient ID: 123456" textFill="#BDC3C7">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                                <Label fx:id="lastVisitLabel" text="Last visit: 2 weeks ago" textFill="#BDC3C7">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <!-- Tab Navigation -->
                <HBox spacing="0.0" style="-fx-padding: 0 40 20 40;">
                    <children>
                        <Button fx:id="overviewTab" mnemonicParsing="false" prefHeight="35.0" prefWidth="100.0"
                                style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-border-width: 0 0 3 0; -fx-border-color: #3498DB;"
                                text="Overview" />
                        <Button fx:id="trendsTab" mnemonicParsing="false" prefHeight="35.0" prefWidth="100.0"
                                style="-fx-background-color: transparent; -fx-text-fill: #BDC3C7; -fx-border-width: 0 0 1 0; -fx-border-color: #2C3E50;"
                                text="Trends" />
                        <Button fx:id="medicationTab" mnemonicParsing="false" prefHeight="35.0" prefWidth="120.0"
                                style="-fx-background-color: transparent; -fx-text-fill: #BDC3C7; -fx-border-width: 0 0 1 0; -fx-border-color: #2C3E50;"
                                text="Medication" />
                        <Button fx:id="notesTab" mnemonicParsing="false" prefHeight="35.0" prefWidth="80.0"
                                style="-fx-background-color: transparent; -fx-text-fill: #BDC3C7; -fx-border-width: 0 0 1 0; -fx-border-color: #2C3E50;"
                                text="Notes" />
                    </children>
                </HBox>

                <!-- Content Area -->
                <StackPane fx:id="contentArea" style="-fx-padding: 0 40 40 40;">
                    <children>
                        <!-- Overview Content (Default) -->
                        <VBox fx:id="overviewContent" spacing="30.0">
                            <children>
                                <!-- Top Row: Glycemic Trends and Medication Adherence -->
                                <HBox spacing="30.0">
                                    <children>
                                        <!-- Glycemic Trends Card -->
                                        <VBox spacing="15.0" style="-fx-background-color: #2C3E50; -fx-background-radius: 8; -fx-padding: 20;" HBox.hgrow="ALWAYS">
                                            <children>
                                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                                    <children>
                                                        <Label text="Glycemic Trends" textFill="WHITE">
                                                            <font>
                                                                <Font name="System Bold" size="16.0" />
                                                            </font>
                                                        </Label>
                                                        <Region HBox.hgrow="ALWAYS" />
                                                        <Label fx:id="averageGlucoseChangeLabel" text="+5%" textFill="#2ECC71">
                                                            <font>
                                                                <Font name="System Bold" size="14.0" />
                                                            </font>
                                                        </Label>
                                                    </children>
                                                </HBox>
                                                <VBox spacing="5.0">
                                                    <children>
                                                        <Label text="Average Blood Glucose (Last 30 Days)" textFill="#BDC3C7">
                                                            <font>
                                                                <Font size="12.0" />
                                                            </font>
                                                        </Label>
                                                        <HBox alignment="BASELINE_LEFT" spacing="5.0">
                                                            <children>
                                                                <Label fx:id="averageGlucoseLabel" text="145" textFill="WHITE">
                                                                    <font>
                                                                        <Font name="System Bold" size="36.0" />
                                                                    </font>
                                                                </Label>
                                                                <Label text="mg/dL" textFill="#BDC3C7">
                                                                    <font>
                                                                        <Font size="14.0" />
                                                                    </font>
                                                                </Label>
                                                            </children>
                                                        </HBox>
                                                    </children>
                                                </VBox>
                                                <LineChart fx:id="glucoseTrendsChart" prefHeight="200.0" createSymbols="false" 
                                                          style="-fx-background-color: transparent;" legendVisible="false">
                                                    <xAxis>
                                                        <CategoryAxis side="BOTTOM" tickLabelFill="WHITE" />
                                                    </xAxis>
                                                    <yAxis>
                                                        <NumberAxis side="LEFT" tickLabelFill="WHITE" />
                                                    </yAxis>
                                                </LineChart>
                                            </children>
                                        </VBox>

                                        <!-- Medication Adherence Card -->
                                        <VBox spacing="15.0" style="-fx-background-color: #2C3E50; -fx-background-radius: 8; -fx-padding: 20;" prefWidth="300.0">
                                            <children>
                                                <Label text="Medication Adherence" textFill="WHITE">
                                                    <font>
                                                        <Font name="System Bold" size="16.0" />
                                                    </font>
                                                </Label>
                                                
                                                <!-- Metformin Progress -->
                                                <VBox spacing="8.0">
                                                    <children>
                                                        <HBox alignment="CENTER_LEFT">
                                                            <children>
                                                                <Label text="Metformin" textFill="WHITE">
                                                                    <font>
                                                                        <Font size="14.0" />
                                                                    </font>
                                                                </Label>
                                                                <Region HBox.hgrow="ALWAYS" />
                                                                <Label fx:id="metforminPercentageLabel" text="85%" textFill="WHITE">
                                                                    <font>
                                                                        <Font size="14.0" />
                                                                    </font>
                                                                </Label>
                                                            </children>
                                                        </HBox>
                                                        <ProgressBar fx:id="metforminProgressBar" prefWidth="260.0" progress="0.85" 
                                                                    style="-fx-accent: #3498DB;" />
                                                    </children>
                                                </VBox>
                                                
                                                <!-- Insulin Progress -->
                                                <VBox spacing="8.0">
                                                    <children>
                                                        <HBox alignment="CENTER_LEFT">
                                                            <children>
                                                                <Label text="Insulin" textFill="WHITE">
                                                                    <font>
                                                                        <Font size="14.0" />
                                                                    </font>
                                                                </Label>
                                                                <Region HBox.hgrow="ALWAYS" />
                                                                <Label fx:id="insulinPercentageLabel" text="70%" textFill="WHITE">
                                                                    <font>
                                                                        <Font size="14.0" />
                                                                    </font>
                                                                </Label>
                                                            </children>
                                                        </HBox>
                                                        <ProgressBar fx:id="insulinProgressBar" prefWidth="260.0" progress="0.70" 
                                                                    style="-fx-accent: #3498DB;" />
                                                    </children>
                                                </VBox>
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>

                                <!-- Bottom Row: Symptoms and Therapy Modifications -->
                                <HBox spacing="30.0">
                                    <children>
                                        <!-- Reported Symptoms Card -->
                                        <VBox spacing="15.0" style="-fx-background-color: #2C3E50; -fx-background-radius: 8; -fx-padding: 20;" prefWidth="300.0">
                                            <children>
                                                <Label text="Reported Symptoms" textFill="WHITE">
                                                    <font>
                                                        <Font name="System Bold" size="16.0" />
                                                    </font>
                                                </Label>
                                                
                                                <VBox fx:id="symptomsContainer" spacing="12.0">
                                                    <!-- Symptoms will be populated by controller -->
                                                </VBox>
                                            </children>
                                        </VBox>

                                        <!-- Therapy Modifications Card -->
                                        <VBox spacing="15.0" style="-fx-background-color: #2C3E50; -fx-background-radius: 8; -fx-padding: 20;" HBox.hgrow="ALWAYS">
                                            <children>
                                                <Label text="Therapy Modifications" textFill="WHITE">
                                                    <font>
                                                        <Font name="System Bold" size="16.0" />
                                                    </font>
                                                </Label>
                                                
                                                <TableView fx:id="therapyModificationsTable" prefHeight="150.0" 
                                                          style="-fx-background-color: #34495E;">
                                                    <columns>
                                                        <TableColumn fx:id="dateColumn" prefWidth="100.0" text="Date" />
                                                        <TableColumn fx:id="modificationColumn" prefWidth="200.0" text="Modification" />
                                                        <TableColumn fx:id="modifiedByColumn" prefWidth="120.0" text="Modified By" />
                                                    </columns>
                                                    <columnResizePolicy>
                                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                                    </columnResizePolicy>
                                                </TableView>
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>

                        <!-- Other tab contents (initially hidden) -->
                        <VBox fx:id="trendsContent" visible="false" />
                        <VBox fx:id="medicationContent" visible="false" />
                        <VBox fx:id="notesContent" visible="false" />
                    </children>
                </StackPane>

                <!-- Action Buttons -->
                <HBox spacing="15.0" style="-fx-padding: 20 40 30 40;" alignment="CENTER_LEFT">
                    <children>
                        <Button fx:id="modifyTherapyBtn" mnemonicParsing="false" prefHeight="40.0" prefWidth="130.0"
                                style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-background-radius: 5;"
                                text="Modify Therapy" />
                        <Button fx:id="updatePatientInfoBtn" mnemonicParsing="false" prefHeight="40.0" prefWidth="150.0"
                                style="-fx-background-color: transparent; -fx-border-color: #3498DB; -fx-border-width: 1; -fx-text-fill: #3498DB; -fx-background-radius: 5;"
                                text="Update Patient Info" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </content>
</ScrollPane>