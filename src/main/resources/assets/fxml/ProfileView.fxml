<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.shape.*?>

<ScrollPane fitToWidth="true" stylesheets="@/assets/css/Style.css" fitToHeight="true" style="-fx-background-color: transparent; -fx-background: transparent;" xmlns:fx="http://javafx.com/fxml" fx:controller="it.glucotrack.controller.ProfileViewController">
    <content>
    <VBox styleClass="main-bg-dark">
            <children>
                <!-- Header Section -->
                <VBox spacing="10.0" style="-fx-padding: 30 40 20 40;">
                    <children>
                            <Label text="User Profile" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="28.0" />
                            </font>
                        </Label>
                        <Label text="View and manage patient information" textFill="#BDC3C7">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <!-- Patient Info Section -->
                <HBox spacing="20.0" style="-fx-padding: 0 40 30 40;">
                    <children>
                            <!-- Patient Details -->
                        <VBox spacing="8.0" VBox.vgrow="ALWAYS">
                            <children>
                                <Label fx:id="patientNameLabel" text="Sophia Bennett" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="22.0" />
                                    </font>
                                </Label>
                                <Label fx:id="patientIdLabel" text="Patient ID: 123456" textFill="#BDC3C7">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <!-- Tab Navigation -->
                <HBox spacing="0.0" style="-fx-padding: 0 40 20 40;">
                    <children>
                            <Button fx:id="overviewTab" mnemonicParsing="false" prefHeight="40.0" prefWidth="160.0"
                                style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-border-width: 0 0 3 0; -fx-border-color: #3498DB;"
                                text="Overview" />
                        <Button fx:id="medicationTab" mnemonicParsing="false" prefHeight="40.0" prefWidth="160.0"
                                style="-fx-background-color: transparent; -fx-text-fill: #BDC3C7; -fx-border-width: 0 0 1 0; -fx-border-color: #2C3E50;"
                                text="Medication" />
                        <Button fx:id="notesTab" mnemonicParsing="false" prefHeight="40.0" prefWidth="160.0"
                                style="-fx-background-color: transparent; -fx-text-fill: #BDC3C7; -fx-border-width: 0 0 1 0; -fx-border-color: #2C3E50;"
                                text="Personal Data" />
                    </children>
                </HBox>

                <!-- Content Area -->
                <StackPane fx:id="contentArea" style="-fx-padding: 0 40 10 40;">
                    <children>
                        <!-- Overview Content (Default) -->
                        <VBox fx:id="overviewContent" spacing="30.0">
                            <children>
                                <!-- Top Row: Glycemic Trends and Medication Adherence -->
                                <HBox spacing="30.0">
                                    <children>
                                        <!-- Glycemic Trends Card -->
                                        <VBox spacing="15" styleClass="card-dark" style="-fx-background-radius: 15; -fx-padding: 25;">
                                            <HBox alignment="CENTER_LEFT" spacing="10">
                                                <Label text="Glycemic Trends"
                                                       style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                                                <Region HBox.hgrow="ALWAYS"/>
                                                <ComboBox fx:id="timeRangeCombo"/>
                                            </HBox>

                                            <!-- Valore attuale e trend -->
                                            <HBox alignment="CENTER_LEFT" spacing="15">
                                                <VBox>
                                                    <HBox alignment="BASELINE_LEFT" spacing="10">
                                                        <Label fx:id="currentGlucoseLabel" text="120"
                                                               style="-fx-text-fill: white; -fx-font-size: 36px; -fx-font-weight: bold;"/>
                                                        <Label text="mg/dL"
                                                               style="-fx-text-fill: #8892b0; -fx-font-size: 14px;"/>
                                                    </HBox>
                                                    <HBox alignment="CENTER_LEFT" spacing="5">
                                                        <Label text="Last 7 Days"
                                                               style="-fx-text-fill: #8892b0; -fx-font-size: 12px;"/>
                                                        <Label fx:id="trendLabel" text="â†“ 5%"
                                                               style="-fx-text-fill: #4caf50; -fx-font-size: 12px; -fx-font-weight: bold;"/>
                                                    </HBox>
                                                </VBox>
                                                <Region HBox.hgrow="ALWAYS"/>
                                                <!-- Status indicator -->
                                                <VBox alignment="CENTER" spacing="5">
                                                    <Label text="Status" style="-fx-text-fill: #8892b0; -fx-font-size: 12px;"/>
                                                    <Label fx:id="statusLabel" text="Normal"
                                                           style="-fx-text-fill: #4caf50; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                                                </VBox>
                                            </HBox>

                                            <!-- Chart placeholder -->
                                            <LineChart fx:id="glucoseChart" prefHeight="250"
                                                       style="-fx-background-color: transparent;">
                                                <xAxis>
                                                    <CategoryAxis side="BOTTOM" style="-fx-tick-label-fill: #8892b0;"
                                                                  tickLabelRotation="45" gapStartAndEnd="true"
                                                                  tickLabelGap="5" tickLength="8"/>
                                                </xAxis>
                                                <yAxis>
                                                    <NumberAxis side="LEFT" style="-fx-tick-label-fill: #8892b0;"
                                                                lowerBound="60" upperBound="200" tickUnit="20"/>
                                                </yAxis>
                                            </LineChart>

                                            <!-- Range indicators -->
                                            <HBox spacing="20" alignment="CENTER">
                                                <HBox spacing="5" alignment="CENTER_LEFT">
                                                    <Region style="-fx-background-color: #4caf50; -fx-pref-width: 12; -fx-pref-height: 12; -fx-background-radius: 6;"/>
                                                    <Label text="Normal (70-140)" style="-fx-text-fill: #8892b0; -fx-font-size: 12px;"/>
                                                </HBox>
                                                <HBox spacing="5" alignment="CENTER_LEFT">
                                                    <Region style="-fx-background-color: #ff9800; -fx-pref-width: 12; -fx-pref-height: 12; -fx-background-radius: 6;"/>
                                                    <Label text="Elevated (140-180)" style="-fx-text-fill: #8892b0; -fx-font-size: 12px;"/>
                                                </HBox>
                                                <HBox spacing="5" alignment="CENTER_LEFT">
                                                    <Region style="-fx-background-color: #f44336; -fx-pref-width: 12; -fx-pref-height: 12; -fx-background-radius: 6;"/>
                                                    <Label text="High (>180)" style="-fx-text-fill: #8892b0; -fx-font-size: 12px;"/>
                                                </HBox>
                                            </HBox>
                                        </VBox>

                                        <!-- Medication Adherence Card -->
                                        <VBox spacing="15.0" styleClass="card-dark" style="-fx-background-radius: 15; -fx-padding: 20;" prefWidth="500.0">
                                            <children>
                                                <Label text="Medication Adherence" textFill="WHITE">
                                                    <font>
                                                        <Font name="System Bold" size="16.0" />
                                                    </font>
                                                </Label>

                                                <!-- Metformin Progress -->
                                                <VBox spacing="8.0">
                                                    <children>
                                                        <HBox alignment="CENTER_LEFT">
                                                            <children>
                                                                <Label text="Adherance" textFill="WHITE">
                                                                    <font>
                                                                        <Font size="14.0" />
                                                                    </font>
                                                                </Label>
                                                                <Region HBox.hgrow="ALWAYS" />
                                                                <Label fx:id="adherancePercentageLabel" text="85%" textFill="WHITE">
                                                                    <font>
                                                                        <Font size="14.0" />
                                                                    </font>
                                                                </Label>
                                                            </children>
                                                        </HBox>
                                                        <ProgressBar fx:id="adheranceProgressBar" prefWidth="260.0" progress="0.85"
                                                                     style="-fx-accent: #3498DB;" />
                                                    </children>
                                                </VBox>
                                                <VBox fx:id="trendsContent" visible="true" />

                                                <!-- Insulin Progress -->
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>

                                <!-- Bottom Row: Symptoms and Therapy Modifications -->
                                <HBox spacing="30.0">
                                    <children>
                                        <!-- Reported Symptoms Card -->
                                        <VBox spacing="15.0" styleClass="card-dark" style="-fx-background-radius: 15; -fx-padding: 20;" prefWidth="300.0">
                                            <children>
                                                <Label text="Reported Symptoms" textFill="WHITE">
                                                    <font>
                                                        <Font name="System Bold" size="16.0" />
                                                    </font>
                                                </Label>

                                                <VBox fx:id="symptomsContainer" spacing="12.0">
                                                        <!-- Symptoms will be populated by controller -->
                                                </VBox>
                                            </children>
                                        </VBox>

                                        <VBox spacing="15.0" styleClass="card-dark" style="-fx-background-radius: 15; -fx-padding: 20;" HBox.hgrow="ALWAYS">
                                            <children>
                                                <Label text="Risk Factors" textFill="WHITE">
                                                    <font>
                                                        <Font name="System Bold" size="16.0" />
                                                    </font>
                                                </Label>
                                                <VBox fx:id="riskFactorsContainer" spacing="10.0">
                                                </VBox>
                                            </children>
                                        </VBox>

                                    </children>
                                </HBox>
                            </children>
                        </VBox>

                        <!-- Other tab contents (initially hidden) -->
                        <VBox fx:id="medicationContent" visible="false" spacing="15.0" style="-fx-padding: 0 40 30 40;">
                            <children>
                                <Label text="Prescribed Medications" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="18.0" />
                                    </font>
                                </Label>

                                <!-- Medications Table -->
                                <TableView fx:id="prescribedMedicationsTable" prefHeight="200.0"
                                           styleClass="table-view-dark">
                                    <columns>
                                        <TableColumn fx:id="medicationNameColumn" prefWidth="200.0" text="Medication Name" />
                                        <TableColumn fx:id="dosageColumn" prefWidth="150.0" text="Dosage" />
                                        <TableColumn fx:id="frequencyColumn" prefWidth="150.0" text="Frequency" />
                                        <TableColumn fx:id="instructionsColumn" prefWidth="200.0" text="Instructions" />
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>
                            </children>
                            <!-- Therapy Modifications Card -->
                            <children>
                                <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent; -fx-background: transparent;">
                                    <content>
                                        <Label text="Therapy Modifications" textFill="WHITE">
                                            <font>
                                                <Font name="System Bold" size="16.0" />
                                            </font>
                                        </Label>
                                        <TableView fx:id="therapyModificationsTable" prefHeight="200.0"
                                                   styleClass="table-view-dark">
                                            <columns>
                                                <TableColumn fx:id="therapyNameEditColumn" prefWidth="200.0" text="Medication Name"/>
                                                <TableColumn fx:id="dosageEditColumn" prefWidth="150.0" text="Dosage" />
                                                <TableColumn fx:id="frequencyEditColumn" prefWidth="150.0" text="Frequency" />
                                                <TableColumn fx:id="instructionsEditColumn" prefWidth="200.0" text="Instructions" />
                                                <TableColumn fx:id="modificationDateColumn" prefWidth="150.0" text="Modification Date" />
                                                <TableColumn fx:id="modifiedByColumn" prefWidth="150.0" text="Modified By" />
                                            </columns>
                                            <columnResizePolicy>
                                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                            </columnResizePolicy>
                                        </TableView>
                                    </content>
                                </ScrollPane>
                            </children>
                        </VBox>
                        <VBox fx:id="notesContent" visible="false" />
                    </children>
                </StackPane>

                <!-- Action Buttons -->
                <HBox spacing="15.0" style="-fx-padding: 30 40 30 40;" alignment="CENTER_LEFT">
                    <children>
            <Button fx:id="addRiskBtn" mnemonicParsing="false" prefHeight="100.0" prefWidth="220.0"
                styleClass="button-accent" text="Add Risk" visible="false" />
            <Button fx:id="deleteUserBtn" mnemonicParsing="false" prefHeight="100.0" prefWidth="220.0"
                styleClass="button-danger" text="Delete User" visible="false" />
            <Button fx:id="sendMessageBtn" mnemonicParsing="false" prefHeight="100.0" prefWidth="220.0"
                styleClass="primary-btn" text="Send Message" visible="false" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </content>
</ScrollPane>