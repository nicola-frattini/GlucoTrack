
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>

<ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent; -fx-background: transparent;" xmlns:fx="http://javafx.com/fxml" fx:controller="it.glucotrack.controller.PatientDashboardReadingsController" stylesheets="@/assets/css/Style.css">
    <content>
        <VBox spacing="20" styleClass="main-bg-dark" style="-fx-padding: 30;">
            <!-- Header Section -->
            <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-padding: 30 40 20 40;">
                <children>
                    <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                        <children>
                            <Label text="Readings" styleClass="form-title" />
                            <Label text="View and manage your glycemic readings." styleClass="secondary-text" />
                        </children>
                    </VBox>
                </children>
            </HBox>

            <!-- Controls Section -->
            <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-padding: 0 40 20 40;">
                <children>
                    <Label text="From:" styleClass="secondary-text" />
                    <DatePicker fx:id="startDatePicker" prefWidth="150.0" styleClass="date-picker-dark" />
                    <Label text="To:" styleClass="secondary-text" />
                    <DatePicker fx:id="endDatePicker" prefWidth="150.0" styleClass="date-picker-dark" />
                    <ComboBox fx:id="typeComboBox" prefWidth="250.0" promptText="All Types" styleClass="combo-box-dark" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Button fx:id="addReadingBtn" mnemonicParsing="false" styleClass="button-accent" text="+ Add New Reading" />
                </children>
            </HBox>

            <!-- Readings Table Section -->
            <VBox spacing="15.0" style="-fx-padding: 0 40 30 40;">
                <children>
                    <Label text="Glycemic Readings" styleClass="form-title" />
                    <TableView fx:id="readingsTable" prefHeight="400.0" styleClass="table-view-dark">
                        <columns>
                            <TableColumn fx:id="timeColumn" prefWidth="120.0" text="Time" />
                            <TableColumn fx:id="typeColumn" prefWidth="150.0" text="Type" />
                            <TableColumn fx:id="valueColumn" prefWidth="150.0" text="Value" />
                            <TableColumn fx:id="statusColumn" prefWidth="150.0" text="Status" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </children>
            </VBox>
        </VBox>
    </content>
</ScrollPane>