<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.glucotrack.controller.PatientDashboardSymptomsInsertController" stylesheets="@/assets/css/Style.css">
   <children>
      <!-- Main Content -->
   <VBox alignment="TOP_CENTER" prefHeight="700.0" styleClass="main-bg-dark" VBox.vgrow="ALWAYS">
      <children>
         <!-- Title Section (Card) -->
         <VBox alignment="CENTER" spacing="10.0" maxWidth="500.0" styleClass="card-dark">
            <children>
               <Label styleClass="form-title" text="Log a New Symptom" />
               <Label styleClass="secondary-text" text="Record any new symptoms you're experiencing for your health record." textAlignment="CENTER" wrapText="true" />
            </children>
            <VBox.margin>
               <Insets bottom="40.0" top="40.0" />
            </VBox.margin>
         </VBox>
         <!-- Form Section (Card) -->
         <VBox alignment="CENTER" maxWidth="500.0" spacing="30.0" styleClass="card-dark">
            <children>
               <!-- Date and Time Row -->
               <HBox spacing="25.0">
                  <children>
                     <!-- Date Field -->
                     <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                        <children>
                           <Label styleClass="primary-text" text="Date" />
                           <TextField fx:id="dateField" prefHeight="50.0" promptText="mm/dd/yyyy" styleClass="input-dark" />
                        </children>
                     </VBox>
                     <!-- Time Field -->
                     <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                        <children>
                           <Label styleClass="primary-text" text="Time" />
                           <TextField fx:id="timeField" prefHeight="50.0" promptText="--:-- --" styleClass="input-dark" />
                        </children>
                     </VBox>
                  </children>
               </HBox>
               <!-- Symptom Name -->
               <VBox spacing="10.0">
                  <children>
                     <Label styleClass="primary-text" text="Symptom Name" />
                     <TextArea fx:id="symptomDescriptionArea" prefHeight="120.0" prefWidth="500.0" promptText="e.g., Headache, Fatigue, Nausea..." styleClass="input-dark" wrapText="true" />
                  </children>
               </VBox>
               <!-- Severity and Duration Row -->
               <HBox spacing="25.0">
                  <children>
                     <!-- Severity Field -->
                     <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                        <children>
                           <Label styleClass="primary-text" text="Severity" />
                           <ComboBox fx:id="severityComboBox" prefHeight="50.0" prefWidth="200.0" promptText="Select Severity" styleClass="combo-box-dark" />
                        </children>
                     </VBox>
                     <!-- Duration Field -->
                     <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                        <children>
                           <Label styleClass="primary-text" text="Duration" />
                           <HBox spacing="10.0" alignment="CENTER_LEFT">
                              <children>
                                 <ComboBox fx:id="hoursComboBox" prefHeight="50.0" prefWidth="80.0" promptText="Hours" styleClass="combo-box-dark" />
                                 <Label styleClass="primary-text" text="h" />
                                 <ComboBox fx:id="minutesComboBox" prefHeight="50.0" prefWidth="80.0" promptText="Minutes" styleClass="combo-box-dark" />
                                 <Label styleClass="primary-text" text="m" />
                              </children>
                           </HBox>
                        </children>
                     </VBox>
                  </children>
               </HBox>
               <!-- Notes Field -->
               <VBox spacing="10.0">
                  <children>
                     <Label styleClass="primary-text" text="Notes (Optional)" />
                     <TextArea fx:id="notesArea" prefHeight="100.0" prefWidth="500.0" promptText="Any additional context..." styleClass="input-dark" wrapText="true" />
                  </children>
               </VBox>
               <!-- Buttons Row -->
               <HBox spacing="20.0" alignment="CENTER">
                  <children>
                     <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" prefHeight="50.0" prefWidth="190.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-border-radius: 10; -fx-cursor: hand;" text="Cancel" />
                     <Button fx:id="logSymptomButton" mnemonicParsing="false" onAction="#handleLogSymptom" prefHeight="55.0" prefWidth="200.0" styleClass="button-accent" text="Log Symptom" />
                  </children>
                  <VBox.margin>
                     <Insets top="20.0" />
                  </VBox.margin>
               </HBox>
            </children>
            <VBox.margin>
               <Insets bottom="40.0" />
            </VBox.margin>
         </VBox>
         </children>
      <padding>
         <Insets left="20.0" right="20.0" />
      </padding>
   </VBox>
   </children>
</VBox>