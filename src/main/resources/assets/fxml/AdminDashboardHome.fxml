<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="it.glucotrack.controller.AdminDashboardHomeController"
           stylesheets="@/assets/css/table-styles.css"
           style="-fx-background-color: #2C3E50;">
    <center>
        <VBox spacing="15.0" style="-fx-padding: 0 40 20 40;">
            <!-- Search + Table -->
            <HBox alignment="CENTER_LEFT" spacing="15.0">
                <children>
                    <TextField fx:id="searchField" prefWidth="300.0" promptText="Search users..."
                               style="-fx-background-color: #34495E; -fx-text-fill: white; -fx-prompt-text-fill: #BDC3C7; -fx-background-radius: 5;">
                        <font><Font size="14.0" /></font>
                    </TextField>
                    <Region HBox.hgrow="ALWAYS" />
                    <Button fx:id="addUserBtn" prefHeight="35.0" prefWidth="120.0"
                            style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-background-radius: 5;"
                            text="Add User" />
                </children>
            </HBox>

            <!-- Users Table -->
            <TableView fx:id="usersTable" VBox.vgrow="ALWAYS"
                       style="-fx-background-color: #34495E; -fx-table-cell-border-color: #2C3E50;">
                <columns>
                    <TableColumn fx:id="idColumn" prefWidth="100.0" text="ID" />
                    <TableColumn fx:id="nameColumn" prefWidth="200.0" text="Name" />
                    <TableColumn fx:id="emailColumn" prefWidth="250.0" text="Email" />
                    <TableColumn fx:id="typeColumn" prefWidth="150.0" text="Type" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
                <placeholder>
                    <VBox alignment="CENTER" spacing="10.0" style="-fx-padding: 20;">
                        <children>
                            <Label text="No users found" textFill="#BDC3C7" />
                            <Label text="Add your first user to get started" textFill="#95A5A6" />
                        </children>
                    </VBox>
                </placeholder>
                <contextMenu>
                    <ContextMenu fx:id="tableContextMenu">
                        <items>
                            <MenuItem fx:id="viewUserMenuItem" text="View Profile" />
                            <MenuItem fx:id="editUserMenuItem" text="Edit User" />
                            <MenuItem fx:id="deleteUserMenuItem" text="Delete User" style="-fx-text-fill: #E74C3C;" />
                        </items>
                    </ContextMenu>
                </contextMenu>
            </TableView>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="10.0"
              style="-fx-padding: 10 40 20 40; -fx-background-color: #34495E;">
            <children>
                <Label fx:id="statusLabel" text="Loading users..." textFill="#BDC3C7" />
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="totalUserLabel" text="Total: 0 users" textFill="#BDC3C7" />
            </children>
        </HBox>
    </bottom>
</BorderPane>