<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.ScrollPane?>

<ScrollPane style="-fx-background-color: #2C3E50;" xmlns:fx="http://javafx.com/fxml" fx:controller="it.glucotrack.controller.AdminDashboardHomeController" stylesheets="@/assets/css/Style.css" fitToWidth="true" fitToHeight="true">
    <VBox styleClass="main-bg-dark">
        <!-- Header Section -->
        <VBox spacing="10.0" styleClass="main-bg-dark" style="-fx-padding: 30 40 20 40;">
            <children>
                <Label text="Users" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                </Label>
                <Label text="Manage users and their access" textFill="#BDC3C7">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
            </children>
        </VBox>

        <!-- Search and Add Section -->
        <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-padding: 0 40 20 40;">
            <children>
                <TextField fx:id="searchField" prefWidth="300.0" promptText="Search users..." styleClass="input-dark">
                    <font>
                        <Font size="14.0" />
                    </font>
                </TextField>
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="addUserBtn" prefHeight="35.0" prefWidth="120.0"
                        style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-background-radius: 5;"
                        text="Add User" />
            </children>
        </HBox>

        <!-- Users Table -->
        <VBox style="-fx-padding: 0 40 40 40;" VBox.vgrow="ALWAYS" styleClass="main-bg-dark">
            <children>
                <TableView fx:id="usersTable" prefHeight="400.0" VBox.vgrow="ALWAYS" styleClass="table-view-dark">
                    <columns>
                        <TableColumn fx:id="idColumn" prefWidth="100.0" text="ID" />
                        <TableColumn fx:id="nameColumn" prefWidth="200.0" text="Name" />
                        <TableColumn fx:id="emailColumn" prefWidth="250.0" text="Email" />
                        <TableColumn fx:id="typeColumn" prefWidth="150.0" text="Type" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <placeholder>
                        <VBox alignment="CENTER" spacing="10.0" style="-fx-padding: 20;">
                            <children>
                                <Label text="No users found" textFill="#BDC3C7">
                                    <font>
                                        <Font size="16.0" />
                                    </font>
                                </Label>
                                <Label text="Add your first user to get started" textFill="#95A5A6">
                                    <font>
                                        <Font size="12.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </placeholder>
                    <contextMenu>
                        <ContextMenu fx:id="tableContextMenu">
                            <items>
                                <MenuItem fx:id="viewUserMenuItem" mnemonicParsing="false" text="View Profile" />
                                <MenuItem fx:id="editUserMenuItem" mnemonicParsing="false" text="Edit User" />
                                <SeparatorMenuItem />
                                <MenuItem fx:id="deleteUserMenuItem" mnemonicParsing="false" text="Delete User" style="-fx-text-fill: #E74C3C;" />
                            </items>
                        </ContextMenu>
                    </contextMenu>
                </TableView>
            </children>
        </VBox>

        <!-- Status Bar -->
        <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-padding: 10 40 20 40; -fx-background-color: #34495E;">
            <children>
                <Label fx:id="statusLabel" text="Loading users..." textFill="#BDC3C7">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="totalUserLabel" text="Total: 0 users" textFill="#BDC3C7">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>
            </children>
        </HBox>
    </VBox>
</ScrollPane>