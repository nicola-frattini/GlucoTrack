<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent; -fx-background: transparent;" xmlns:fx="http://javafx.com/fxml" fx:controller="it.glucotrack.controller.DoctorDashboardHomeController" stylesheets="@/assets/css/dashboard-styles.css">
    <content>
        <VBox spacing="20" style="-fx-padding: 30;">

            <!-- Header -->
            <VBox spacing="5">
                <Label text="Dashboard" style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;"/>
                <Label text="Overview of your patients and their health status."
                       style="-fx-text-fill: #aaaaaa; -fx-font-size: 12;"/>
            </VBox>

            <!-- Quick Actions -->
            <VBox spacing="10" style="-fx-background-color: #1e293b; -fx-background-radius: 10; -fx-padding: 15;">
                <Label text="Quick Actions" style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;"/>
                <HBox spacing="15">
                    <Button fx:id="managePatientsBtn" text="👥 Manage Patients"
                            style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 14px; -fx-padding: 12 20; -fx-cursor: hand;"
                            onAction="#onManagePatientsClick" prefWidth="150"/>
                    <Button fx:id="manageMedicationsBtn" text="💊 Manage Medications"
                            style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 14px; -fx-padding: 12 20; -fx-cursor: hand;"
                            onAction="#onManageMedicationsClick" prefWidth="180"/>
                    <Button fx:id="viewReportsBtn" text="📊 View Reports"
                            style="-fx-background-color: #8b5cf6; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 14px; -fx-padding: 12 20; -fx-cursor: hand;"
                            onAction="#onViewReportsClick" prefWidth="140"/>
                    <Button fx:id="newPrescriptionBtn" text="📝 New Prescription"
                            style="-fx-background-color: #f59e0b; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 14px; -fx-padding: 12 20; -fx-cursor: hand;"
                            onAction="#onNewPrescriptionClick" prefWidth="160"/>
                </HBox>
            </VBox>

            <!-- Alerts -->
            <VBox spacing="20" VBox.vgrow="ALWAYS">

                <!-- Alerts & Reminders -->
                <VBox spacing="15" VBox.vgrow="ALWAYS" style="-fx-background-color: #16213e; -fx-background-radius: 15; -fx-padding: 25;">
                    <Label text="Alerts &amp; Reminders"
                           style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>

                    <!-- Filtro gravità e paziente -->
                    <HBox spacing="15" style="-fx-padding: 5 0 10 0;">
                        <Label text="Filter by:" style="-fx-text-fill: #cccccc; -fx-font-size: 12px;"/>
                        <ComboBox fx:id="severityFilterCombo" prefWidth="150"/>
                        <ComboBox fx:id="patientFilterCombo" prefWidth="200"/>
                    </HBox>

                    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background: transparent; -fx-background-color: transparent;">
                        <!-- Container per alert singoli -->
                        <VBox fx:id="alertsContainer" spacing="10" fillWidth="true" />
                    </ScrollPane>
                </VBox>

            </VBox>
        </VBox>
    </content>
</ScrollPane>
