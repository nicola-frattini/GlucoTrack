<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent; -fx-background: transparent;" xmlns:fx="http://javafx.com/fxml" fx:controller="it.glucotrack.controller.DoctorDashboardHomeController" stylesheets="@/assets/css/Style.css">
    <content>
        <VBox spacing="20" style="-fx-padding: 30;">

            <!-- Header -->
            <VBox spacing="5">
                <Label text="Dashboard" styleClass="primary-title"/>
                <Label text="Overview of your patients and their health status." styleClass="secondary-text"/>
            </VBox>

            <!-- Quick Actions -->
            <VBox spacing="10" styleClass="card-dark">
                <Label text="Quick Actions" styleClass="primary-title"/>
                <HBox spacing="15">
            <Button fx:id="newPrescriptionBtn" text="New Prescription"
                styleClass="button-accent"
                onAction="#onNewPrescriptionClick" prefWidth="160"/>
                </HBox>
            </VBox>

            <!-- Alerts -->
            <VBox spacing="20" VBox.vgrow="ALWAYS">

                <!-- Alerts & Reminders -->
                <VBox spacing="15" VBox.vgrow="ALWAYS" style="-fx-background-color: #16213e; -fx-background-radius: 15; -fx-padding: 25;">
              <Label text="Alerts &amp; Reminders" styleClass="primary-title"/>

                    <!-- Filtro gravitÃ  e paziente -->
                    <HBox spacing="15" style="-fx-padding: 5 0 10 0;">
                        <Label text="Filter by:" styleClass="secondary-text"/>
                        <ComboBox fx:id="severityFilterCombo" prefWidth="150" styleClass="combo-box-dark"/>
                        <ComboBox fx:id="patientFilterCombo" prefWidth="200" styleClass="combo-box-dark"/>
                    </HBox>

                    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background: transparent; -fx-background-color: transparent;">
                        <!-- Container per alert singoli -->
                        <VBox fx:id="alertsContainer" spacing="10" fillWidth="true" />
                    </ScrollPane>
                </VBox>

            </VBox>
        </VBox>
    </content>
</ScrollPane>
