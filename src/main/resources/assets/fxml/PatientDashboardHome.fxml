<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>

<ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent; -fx-background: transparent;" xmlns:fx="http://javafx.com/fxml" fx:controller="it.glucotrack.controller.PatientDashboardHomeController">
    <content>
        <VBox spacing="20" style="-fx-padding: 30;">
            <!-- Header -->
            <VBox spacing="10">
                <Label text="Patient Dashboard"
                       style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;"/>
                <Label text="Overview of your health metrics and alerts"
                       style="-fx-text-fill: #8892b0; -fx-font-size: 14px;"/>
            </VBox>

            <HBox spacing="20" alignment="TOP_LEFT">
                <!-- Sezione principale sinistra -->    
                <VBox spacing="20" HBox.hgrow="ALWAYS" prefWidth="600">

                    <!-- Glycemic Trends -->
                    <VBox spacing="15" style="-fx-background-color: #16213e; -fx-background-radius: 15; -fx-padding: 25;">
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label text="Glycemic Trends"
                                   style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <ComboBox fx:id="timeRangeCombo"/>
                        </HBox>

                        <!-- Valore attuale e trend -->
                        <HBox alignment="CENTER_LEFT" spacing="15">
                            <VBox>
                                <HBox alignment="BASELINE_LEFT" spacing="10">
                                    <Label fx:id="currentGlucoseLabel" text="120"
                                           style="-fx-text-fill: white; -fx-font-size: 36px; -fx-font-weight: bold;"/>
                                    <Label text="mg/dL"
                                           style="-fx-text-fill: #8892b0; -fx-font-size: 14px;"/>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" spacing="5">
                                    <Label text="Last 7 Days"
                                           style="-fx-text-fill: #8892b0; -fx-font-size: 12px;"/>
                                    <Label fx:id="trendLabel" text="↓ 5%"
                                           style="-fx-text-fill: #4caf50; -fx-font-size: 12px; -fx-font-weight: bold;"/>
                                </HBox>
                            </VBox>
                            <Region HBox.hgrow="ALWAYS"/>
                            <!-- Status indicator -->
                            <VBox alignment="CENTER" spacing="5">
                                <Label text="Status" style="-fx-text-fill: #8892b0; -fx-font-size: 12px;"/>
                                <Label fx:id="statusLabel" text="Normal"
                                       style="-fx-text-fill: #4caf50; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                            </VBox>
                        </HBox>

                        <!-- Chart placeholder -->
                        <LineChart fx:id="glucoseChart" prefHeight="250"
                                   style="-fx-background-color: transparent;">
                            <xAxis>
                                <CategoryAxis side="BOTTOM" style="-fx-tick-label-fill: #8892b0;"/>
                            </xAxis>
                            <yAxis>
                                <NumberAxis side="LEFT" style="-fx-tick-label-fill: #8892b0;"
                                            lowerBound="60" upperBound="200"/>
                            </yAxis>
                        </LineChart>

                        <!-- Range indicators -->
                        <HBox spacing="20" alignment="CENTER">
                            <HBox spacing="5" alignment="CENTER_LEFT">
                                <Region style="-fx-background-color: #4caf50; -fx-pref-width: 12; -fx-pref-height: 12; -fx-background-radius: 6;"/>
                                <Label text="Normal (70-140)" style="-fx-text-fill: #8892b0; -fx-font-size: 12px;"/>
                            </HBox>
                            <HBox spacing="5" alignment="CENTER_LEFT">
                                <Region style="-fx-background-color: #ff9800; -fx-pref-width: 12; -fx-pref-height: 12; -fx-background-radius: 6;"/>
                                <Label text="Elevated (140-180)" style="-fx-text-fill: #8892b0; -fx-font-size: 12px;"/>
                            </HBox>
                            <HBox spacing="5" alignment="CENTER_LEFT">
                                <Region style="-fx-background-color: #f44336; -fx-pref-width: 12; -fx-pref-height: 12; -fx-background-radius: 6;"/>
                                <Label text="High (>180)" style="-fx-text-fill: #8892b0; -fx-font-size: 12px;"/>
                            </HBox>
                        </HBox>
                    </VBox>

                    <!-- Quick Actions -->
                    <VBox spacing="15" style="-fx-background-color: #16213e; -fx-background-radius: 15; -fx-padding: 25;">
                        <Label text="Quick Actions"
                               style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>

                        <HBox spacing="15" alignment="CENTER">
                            <VBox alignment="CENTER" spacing="10" style="-fx-cursor: hand;"
                                  onMouseClicked="#onLogReadingClick">
                                <Button style="-fx-background-color: #64b5f6; -fx-background-radius: 15; -fx-padding: 20; -fx-cursor: hand; -fx-font-size: 20px;"
                                        prefWidth="80" prefHeight="80" text="📊" />
                                <Label text="Log Reading" style="-fx-text-fill: white; -fx-font-size: 12px; -fx-alignment: center;"/>
                            </VBox>

                            <VBox alignment="CENTER" spacing="10" style="-fx-cursor: hand;"
                                  onMouseClicked="#onRecordSymptomsClick">
                                <Button style="-fx-background-color: #4a5568; -fx-background-radius: 15; -fx-padding: 20; -fx-cursor: hand; -fx-font-size: 20px;"
                                        prefWidth="80" prefHeight="80" text="🩺" />
                                <Label text="Record Symptoms" style="-fx-text-fill: white; -fx-font-size: 12px; -fx-alignment: center;"/>
                            </VBox>

                            <VBox alignment="CENTER" spacing="10" style="-fx-cursor: hand;"
                                  onMouseClicked="#onAddMedicationClick">
                                <Button style="-fx-background-color: #4a5568; -fx-background-radius: 15; -fx-padding: 20; -fx-cursor: hand; -fx-font-size: 20px;"
                                        prefWidth="80" prefHeight="80" text="💊" />
                                <Label text="Add Medication" style="-fx-text-fill: white; -fx-font-size: 12px; -fx-alignment: center;"/>
                            </VBox>

                            <VBox alignment="CENTER" spacing="10" style="-fx-cursor: hand;"
                                  onMouseClicked="#onViewHistoryClick">
                                <Button style="-fx-background-color: #4a5568; -fx-background-radius: 15; -fx-padding: 20; -fx-cursor: hand; -fx-font-size: 20px;"
                                        prefWidth="80" prefHeight="80" text="📋" />
                                <Label text="View History" style="-fx-text-fill: white; -fx-font-size: 12px; -fx-alignment: center;"/>
                            </VBox>
                        </HBox>
                    </VBox>
                </VBox>

                <!-- Sidebar destra - Alerts & Reminders -->
                <VBox spacing="20" prefWidth="300">

                    <!-- Alerts & Reminders -->
                    <VBox spacing="15" style="-fx-background-color: #16213e; -fx-background-radius: 15; -fx-padding: 25;">
                        <Label text="Alerts &amp; Reminders"
                               style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>

                        <VBox spacing="10">
                            <!-- Medication Reminder -->
                            <HBox spacing="10" alignment="CENTER_LEFT"
                                  style="-fx-background-color: #0f1c35; -fx-background-radius: 10; -fx-padding: 15;">
                                <Label text="🕐" style="-fx-font-size: 16px;" />
                                <VBox spacing="5" HBox.hgrow="ALWAYS">
                                    <Label text="Medication Reminder"
                                           style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                                    <Label text="Time to take your insulin dose."
                                           style="-fx-text-fill: #8892b0; -fx-font-size: 12px;" wrapText="true"/>
                                </VBox>
                            </HBox>

                            <!-- High Glucose Alert -->
                            <HBox spacing="10" alignment="CENTER_LEFT"
                                  style="-fx-background-color: #2d1b1b; -fx-background-radius: 10; -fx-padding: 15; -fx-border-color: #f44336; -fx-border-width: 1; -fx-border-radius: 10;">
                                <Label text="⚠️" style="-fx-font-size: 16px;" />
                                <VBox spacing="5" HBox.hgrow="ALWAYS">
                                    <Label text="High Glucose Alert"
                                           style="-fx-text-fill: #f44336; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                                    <Label text="Your blood glucose is higher than normal."
                                           style="-fx-text-fill: #8892b0; -fx-font-size: 12px;" wrapText="true"/>
                                </VBox>
                            </HBox>

                            <!-- Upcoming Appointment -->
                            <HBox spacing="10" alignment="CENTER_LEFT"
                                  style="-fx-background-color: #0f1c35; -fx-background-radius: 10; -fx-padding: 15;">
                                <Label text="📅" style="-fx-font-size: 16px;" />
                                <VBox spacing="5" HBox.hgrow="ALWAYS">
                                    <Label text="Upcoming Appointment"
                                           style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                                    <Label text="Follow-up with Dr. Chen tomorrow at 10 AM."
                                           style="-fx-text-fill: #8892b0; -fx-font-size: 12px;" wrapText="true"/>
                                </VBox>
                            </HBox>
                        </VBox>
                    </VBox>

                    <!-- Recent Activity -->
                    <VBox spacing="15" style="-fx-background-color: #16213e; -fx-background-radius: 15; -fx-padding: 25;">
                        <Label text="Recent Activity"
                               style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>

                        <VBox spacing="8">
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Region style="-fx-background-color: #4caf50; -fx-pref-width: 8; -fx-pref-height: 8; -fx-background-radius: 4;"/>
                                <VBox spacing="2" HBox.hgrow="ALWAYS">
                                    <Label text="Glucose reading logged"
                                           style="-fx-text-fill: white; -fx-font-size: 12px;"/>
                                    <Label text="2 hours ago"
                                           style="-fx-text-fill: #8892b0; -fx-font-size: 11px;"/>
                                </VBox>
                            </HBox>

                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Region style="-fx-background-color: #2196f3; -fx-pref-width: 8; -fx-pref-height: 8; -fx-background-radius: 4;"/>
                                <VBox spacing="2" HBox.hgrow="ALWAYS">
                                    <Label text="Medication taken"
                                           style="-fx-text-fill: white; -fx-font-size: 12px;"/>
                                    <Label text="4 hours ago"
                                           style="-fx-text-fill: #8892b0; -fx-font-size: 11px;"/>
                                </VBox>
                            </HBox>

                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Region style="-fx-background-color: #ff9800; -fx-pref-width: 8; -fx-pref-height: 8; -fx-background-radius: 4;"/>
                                <VBox spacing="2" HBox.hgrow="ALWAYS">
                                    <Label text="Symptoms recorded"
                                           style="-fx-text-fill: white; -fx-font-size: 12px;"/>
                                    <Label text="Yesterday"
                                           style="-fx-text-fill: #8892b0; -fx-font-size: 11px;"/>
                                </VBox>
                            </HBox>
                        </VBox>
                    </VBox>
                </VBox>
            </HBox>
        </VBox>
    </content>
</ScrollPane>