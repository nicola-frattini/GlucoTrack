<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.glucotrack.controller.PatientDashboardGlucoseInsertController" stylesheets="@/assets/css/Style.css">
    <children>
        <!-- Main Content -->
    <VBox alignment="TOP_CENTER" prefHeight="600.0" style="-fx-background-color: #0f1c35;" VBox.vgrow="ALWAYS">
            <children>
                <!-- Title Section -->
                <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #16213e; -fx-background-radius: 15; -fx-padding: 25;">
                    <children>
                        <Label style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;" text="New Glycemia Entry" />
                        <Label style="-fx-text-fill: #8892b0; -fx-font-size: 16px;" text="Add your blood glucose measurement." />
                    </children>
                    <VBox.margin>
                        <Insets bottom="40.0" top="40.0" />
                    </VBox.margin>
                </VBox>

                <!-- Form Section -->
                <VBox alignment="CENTER" maxWidth="400.0" spacing="25.0" style="-fx-background-color: #16213e; -fx-background-radius: 15; -fx-padding: 25;">
                    <children>
                        <!-- Date and Time Row -->
                        <HBox spacing="20.0">
                            <children>
                                <!-- Date Field -->
                                <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="Date" />
                                        <DatePicker fx:id="datePicker" prefHeight="45.0" promptText="mm/dd/yyyy" styleClass="date-picker-dark" />
                                    </children>
                                </VBox>

                                <!-- Time Field -->
                                <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="Time" />
                                        <TextField fx:id="timeField" prefHeight="45.0" promptText="--:--" styleClass="input-dark" />
                                    </children>
                                </VBox>
                            </children>
                        </HBox>

                        <!-- Type Field -->
                        <VBox spacing="8.0">
                            <children>
                                <Label style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="Type" />
                                <ComboBox fx:id="typeComboBox" prefHeight="45.0" prefWidth="400.0" promptText="Before Breakfast" styleClass="combo-box-dark" />
                                <TextField fx:id="valueField" prefHeight="45.0" promptText="e.g., 110" styleClass="input-dark" />
                            </children>
                        </VBox>

                        <!-- Value Field -->
                        <VBox spacing="8.0">
                            <children>
                                <Label style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="Value (mg/dL)" />
                                <!-- Un solo TextField valueField giÃ  presente sopra -->
                            </children>
                        </VBox>

                        <!-- Notes Field -->
                        <VBox spacing="8.0">
                            <children>
                                <Label style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="Notes" />
                                <TextArea fx:id="notesArea" prefHeight="80.0" prefWidth="400.0" promptText="Add any relevant notes..." styleClass="input-dark" wrapText="true" />
                            </children>
                        </VBox>

                        <!-- Buttons -->
                        <HBox spacing="20.0" alignment="CENTER">
                            <children>
                                <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" prefHeight="50.0" prefWidth="190.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-border-radius: 10; -fx-cursor: hand;" text="Cancel" />
                                <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleSaveEntry" prefHeight="50.0" prefWidth="190.0" style="-fx-background-color: #64b5f6; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-border-radius: 10; -fx-cursor: hand;" text="Save Entry" />
                            </children>
                        </HBox>
                    </children>
                    <VBox.margin>
                        <Insets bottom="40.0" />
                    </VBox.margin>
                </VBox>
            </children>
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
        </VBox>
    </children>
</VBox>