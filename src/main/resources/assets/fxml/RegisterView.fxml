<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<HBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="it.glucotrack.controller.RegisterController"
      stylesheets="@/assets/css/Style.css">

    <children>
        <!-- Sezione sinistra - Form di registrazione -->
        <ScrollPane fitToWidth="true" HBox.hgrow="ALWAYS" style="-fx-background: #2c3e50; -fx-background-color: #2c3e50;">
            <content>
                <VBox alignment="CENTER" style="-fx-background-color: #2c3e50;" spacing="20.0">
                    <padding>
                        <Insets top="30" right="30" bottom="30" left="30" />
                    </padding>
                    <children>
                        <!-- Header -->
                        <VBox alignment="CENTER" spacing="5.0">
                            <children>
                                <Label text="Create Your Account" textFill="#ecf0f1">
                                    <font>
                                        <Font name="System Bold" size="28.0" />
                                    </font>
                                </Label>
                                <Label text="Join GlucoTrack to manage your diabetes care." textFill="#7f8c8d">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>

                        <!-- Form fields -->
                        <VBox spacing="15.0" maxWidth="500.0" alignment="CENTER">
                            <children>
                                <!-- Account Type Selection (First) -->
                                <ComboBox fx:id="accountTypeComboBox"
                                          promptText="Select Account Type"
                                          styleClass="combo-box-dark"
                                          maxWidth="Infinity" />

                                <!-- Basic Information -->
                                <VBox fx:id="basicInfoContainer" spacing="15.0">
                                    <children>
                                        <!-- Row 1: Name and Surname -->
                                        <HBox spacing="10.0">
                                            <children>
                                                <TextField fx:id="firstNameField"
                                                           promptText="First Name"
                                                           styleClass="input-dark"
                                                           HBox.hgrow="ALWAYS">
                                                    <font>
                                                        <Font size="14.0" />
                                                    </font>
                                                </TextField>
                                                <TextField fx:id="lastNameField"
                                                           promptText="Last Name"
                                                           styleClass="input-dark"
                                                           HBox.hgrow="ALWAYS">
                                                    <font>
                                                        <Font size="14.0" />
                                                    </font>
                                                </TextField>
                                            </children>
                                        </HBox>

                                        <!-- Row 2: Email -->
                                        <TextField fx:id="emailField"
                                                   promptText="Email"
                                                   styleClass="input-dark">
                                            <font>
                                                <Font size="14.0" />
                                            </font>
                                        </TextField>

                                        <!-- Row 3: Phone -->
                                        <TextField fx:id="phoneField"
                                                   promptText="Phone Number"
                                                   styleClass="input-dark">
                                            <font>
                                                <Font size="14.0" />
                                            </font>
                                        </TextField>

                                        <!-- Row 4: Gender and Date -->
                                        <HBox spacing="10.0">
                                            <children>
                                                <ComboBox fx:id="genderComboBox"
                                                          promptText="Gender"
                                                          styleClass="combo-box-dark"
                                                          HBox.hgrow="ALWAYS" />
                                                <DatePicker fx:id="birthDatePicker"
                                                            promptText="Birth Date"
                                                            styleClass="date-picker-dark"
                                                            HBox.hgrow="ALWAYS" />
                                            </children>
                                        </HBox>

                                        <!-- Row 5: Birth Place and Fiscal Code -->
                                        <HBox spacing="10.0">
                                            <children>
                                                <TextField fx:id="birthPlaceField"
                                                           promptText="Birth Place"
                                                           styleClass="input-dark"
                                                           HBox.hgrow="ALWAYS">
                                                    <font>
                                                        <Font size="14.0" />
                                                    </font>
                                                </TextField>
                                                <TextField fx:id="fiscalCodeField"
                                                           promptText="Fiscal Code"
                                                           styleClass="input-dark"
                                                           HBox.hgrow="ALWAYS">
                                                    <font>
                                                        <Font size="14.0" />
                                                    </font>
                                                </TextField>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>

                                <!-- Doctor-specific fields -->
                                <VBox fx:id="doctorFieldsContainer" spacing="15.0" visible="false" managed="false">
                                    <children>
                                        <Label text="Doctor Information" textFill="#3498db" style="-fx-font-weight: bold; -fx-font-size: 16px;" />

                                        <TextField fx:id="specializationField"
                                                   promptText="ðŸ©º Medical Specialization"
                                                   styleClass="input-dark">
                                            <font>
                                                <Font size="14.0" />
                                            </font>
                                        </TextField>
                                    </children>
                                </VBox>

                                <!-- Patient-specific fields -->
                                <VBox fx:id="patientFieldsContainer" spacing="15.0" visible="false" managed="false">
                                    <children>
                                        <Label text="Patient Information" textFill="#3498db" style="-fx-font-weight: bold; -fx-font-size: 16px;" />

                                        <ComboBox fx:id="referringDoctorComboBox"
                                                  promptText="Select Referring Doctor"
                                                  styleClass="combo-box-dark"
                                                  maxWidth="Infinity" />
                                    </children>
                                </VBox>

                                <!-- Password fields -->
                                <VBox spacing="15.0">
                                    <children>
                                        <PasswordField fx:id="passwordField"
                                                       promptText="Password"
                                                       styleClass="input-dark">
                                            <font>
                                                <Font size="14.0" />
                                            </font>
                                        </PasswordField>

                                        <PasswordField fx:id="confirmPasswordField"
                                                       promptText="Confirm Password"
                                                       styleClass="input-dark">
                                            <font>
                                                <Font size="14.0" />
                                            </font>
                                        </PasswordField>
                                    </children>
                                </VBox>

                                <!-- Terms checkbox -->
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <CheckBox fx:id="termsCheckBox" style="-fx-text-fill: #ecf0f1;" />
                                        <Label text="I accept the " textFill="#7f8c8d">
                                            <font>
                                                <Font size="14.0" />
                                            </font>
                                        </Label>
                                        <Label text="Terms and Conditions" textFill="#3498db" underline="true" style="-fx-cursor: hand;">
                                            <font>
                                                <Font size="14.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </HBox>

                                <!-- Create Account Button -->
                                <Button fx:id="registerButton"
                                        text="Create Account"
                                        prefHeight="50.0"
                                        maxWidth="Infinity"
                                        style="-fx-background-color: linear-gradient(to bottom, #3498db, #2980b9); -fx-text-fill: white; -fx-background-radius: 25; -fx-font-weight: bold; -fx-font-size: 16px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 2);">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Button>

                                <!-- Login link -->
                                <HBox alignment="CENTER" spacing="5.0">
                                    <children>
                                        <Label text="Already have an account?" textFill="#7f8c8d">
                                            <font>
                                                <Font size="14.0" />
                                            </font>
                                        </Label>
                                        <Label fx:id="loginLabel" text="Log in" textFill="#3498db" underline="true" style="-fx-cursor: hand;">
                                            <font>
                                                <Font size="14.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>

        <!-- Sezione destra - Branding -->
        <VBox alignment="CENTER" style="-fx-background-color: #7f8c8d;" spacing="20.0" prefWidth="700" maxWidth="700" >
            <children>
                <HBox alignment="CENTER" spacing="15.0">
                    <children>
                        <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="/assets/icons/Logo.png" />
                            </image>
                        </ImageView>
                        <Label text="GlucoTrack" textFill="white">
                            <font>
                                <Font name="System Bold" size="32.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>

                <Label alignment="CENTER" text="Connecting patients and diabetologists for better diabetes management" textAlignment="CENTER" textFill="#ecf0f1" wrapText="true" maxWidth="550.0">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
            </padding>
        </VBox>
    </children>
</HBox>