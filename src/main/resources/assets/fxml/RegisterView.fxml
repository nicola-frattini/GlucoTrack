<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<HBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="it.glucotrack.controller.RegisterController"
    stylesheets="@../css/register-styles.css,@../css/register-styles.css">

    <children>
        <!-- Sezione sinistra - Form di registrazione -->
        <VBox alignment="CENTER" style="-fx-background-color: #2c3e50;" spacing="30.0" HBox.hgrow="ALWAYS">
            <children>
                <!-- Header -->
                <VBox alignment="CENTER" spacing="5.0">
                    <children>
                        <Label text="Create Your Account" textFill="#ecf0f1">
                            <font>
                                <Font name="System Bold" size="28.0" />
                            </font>
                        </Label>
                        <Label text="Join GlucoTrack to manage your diabetes care." textFill="#7f8c8d">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <!-- Form fields -->
                <VBox spacing="15.0" maxWidth="400.0" alignment="CENTER">
                    <children>
                        <!-- Row 1: Name and Surname -->
                        <HBox spacing="10.0">
                            <children>
                                <TextField fx:id="firstNameField"
                                           promptText="ðŸ‘¤ Name"
                                           style="-fx-background-color: #34495e; -fx-text-fill: #ecf0f1; -fx-prompt-text-fill: #7f8c8d; -fx-border-color: #3498db; -fx-border-width: 0 0 2 0; -fx-background-radius: 0; -fx-border-radius: 0; -fx-padding: 15;"
                                           HBox.hgrow="ALWAYS">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </TextField>
                                <TextField fx:id="lastNameField"
                                           promptText="ðŸ‘¤ Surname"
                                           style="-fx-background-color: #34495e; -fx-text-fill: #ecf0f1; -fx-prompt-text-fill: #7f8c8d; -fx-border-color: #3498db; -fx-border-width: 0 0 2 0; -fx-background-radius: 0; -fx-border-radius: 0; -fx-padding: 15;"
                                           HBox.hgrow="ALWAYS">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </TextField>
                            </children>
                        </HBox>

                        <!-- Row 2: Gender and Date -->
                        <HBox spacing="10.0">
                            <children>
                                <ComboBox fx:id="genderComboBox"
                                          promptText="âš¥ Gender"
                                          styleClass="combo-box-dark"
                                          style="-fx-background-color: #34495e; -fx-text-fill: #ecf0f1; -fx-prompt-text-fill: #7f8c8d; -fx-border-color: #3498db; -fx-border-width: 0 0 2 0; -fx-background-radius: 8; -fx-padding: 15; -fx-font-size: 14px;"
                                          HBox.hgrow="ALWAYS" />
                                <DatePicker fx:id="birthDatePicker"
                                            promptText="ðŸ—“ Birth Date"
                                            styleClass="date-picker-dark"
                                            style="-fx-background-color: #34495e; -fx-text-fill: #ecf0f1; -fx-prompt-text-fill: #7f8c8d; -fx-border-color: #3498db; -fx-border-width: 0 0 2 0; -fx-background-radius: 8; -fx-padding: 15; -fx-font-size: 14px;"
                                            HBox.hgrow="ALWAYS" />
                            </children>
                        </HBox>

                        <!-- Row 3: Email -->
                        <TextField fx:id="emailField"
                                   promptText="ðŸ“§ Email"
                                   style="-fx-background-color: #34495e; -fx-text-fill: #ecf0f1; -fx-prompt-text-fill: #7f8c8d; -fx-border-color: #3498db; -fx-border-width: 0 0 2 0; -fx-background-radius: 0; -fx-border-radius: 0; -fx-padding: 15;">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </TextField>

                        <!-- Row 4: Password -->
                        <PasswordField fx:id="passwordField"
                                       promptText="ðŸ”’ Password"
                                       style="-fx-background-color: #34495e; -fx-text-fill: #ecf0f1; -fx-prompt-text-fill: #7f8c8d; -fx-border-color: #3498db; -fx-border-width: 0 0 2 0; -fx-background-radius: 0; -fx-border-radius: 0; -fx-padding: 15;">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </PasswordField>

                        <!-- Row 5: Confirm Password -->
                        <PasswordField fx:id="confirmPasswordField"
                                       promptText="ðŸ”’ Confirm Password"
                                       style="-fx-background-color: #34495e; -fx-text-fill: #ecf0f1; -fx-prompt-text-fill: #7f8c8d; -fx-border-color: #3498db; -fx-border-width: 0 0 2 0; -fx-background-radius: 0; -fx-border-radius: 0; -fx-padding: 15;">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </PasswordField>

                        <!-- Account Type -->
                        <!-- Account Type -->
                        <ComboBox fx:id="accountTypeComboBox"
                                  promptText="ðŸ‘¥ Select Account Type"
                                  styleClass="combo-box-dark"
                                  style="-fx-background-color: #34495e; -fx-text-fill: #ecf0f1; -fx-prompt-text-fill: #7f8c8d; -fx-border-color: #3498db; -fx-border-width: 0 0 2 0; -fx-background-radius: 8; -fx-padding: 15; -fx-font-size: 14px;"
                                  maxWidth="Infinity" />

                        <!-- Terms checkbox -->
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <CheckBox fx:id="termsCheckBox" style="-fx-text-fill: #ecf0f1;" />
                                <Label text="I accept the " textFill="#7f8c8d">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                                <Label text="Terms and Conditions" textFill="#3498db" underline="true" style="-fx-cursor: hand;">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                            </children>
                        </HBox>

                        <!-- Create Account Button -->
                        <Button fx:id="registerButton"
                                text="Create Account"
                                prefHeight="50.0"
                                maxWidth="Infinity"
                                style="-fx-background-color: linear-gradient(to bottom, #3498db, #2980b9); -fx-text-fill: white; -fx-background-radius: 25; -fx-font-weight: bold; -fx-font-size: 16px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 2);">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Button>

                        <!-- Login link -->
                        <HBox alignment="CENTER" spacing="5.0">
                            <children>
                                <Label text="Already have an account?" textFill="#7f8c8d">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                                <Label fx:id="loginLabel" text="Log in" textFill="#3498db" underline="true" style="-fx-cursor: hand;">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>

        <!-- Sezione destra - Branding -->
        <VBox alignment="CENTER" style="-fx-background-color: #7f8c8d;" spacing="20.0" prefWidth="700" maxWidth="700" >
            <children>
                <HBox alignment="CENTER" spacing="15.0">
                    <children>
                        <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="/assets/icons/Logo.png" />
                            </image>
                        </ImageView>
                        <Label text="GlucoTrack" textFill="white">
                            <font>
                                <Font name="System Bold" size="32.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>

                <Label alignment="CENTER" text="Connecting patients and diabetologists for better diabetes management" textAlignment="CENTER" textFill="#ecf0f1" wrapText="true" maxWidth="550.0">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
            </padding>
        </VBox>
    </children>
</HBox>