<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane style="-fx-background-color: #2C3E50;" xmlns:fx="http://javafx.com/fxml" fx:controller="it.glucotrack.controller.DoctorDashboardMedicationsEditController" fitToWidth="true" fitToHeight="true">
    <VBox style="-fx-background-color: #2C3E50;" spacing="0">

        <!-- Header Section -->
        <VBox spacing="10.0" style="-fx-padding: 30 40 20 40;">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <children>
                        <Button fx:id="backButton" onAction="#handleBackToList" mnemonicParsing="false"
                                style="-fx-background-color: transparent; -fx-text-fill: #3498DB; -fx-font-size: 14px; -fx-padding: 5 10;"
                                text="← Back to Medications">
                        </Button>
                    </children>
                </HBox>

                <Label text="Edit Medication" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                </Label>
                <Label text="Update medication prescription details" textFill="#BDC3C7">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
            </children>
        </VBox>

        <!-- Main Form Container -->
        <VBox spacing="20.0" style="-fx-padding: 0 40 40 40;" VBox.vgrow="ALWAYS">
            <children>

                <!-- Form Card -->
                <VBox spacing="25.0" style="-fx-background-color: #34495E; -fx-background-radius: 10; -fx-padding: 30;">
                    <children>

                        <!-- Patient Selection Row -->
                        <VBox spacing="8.0">
                            <children>
                                <Label text="Patient *" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <ComboBox fx:id="patientComboBox" prefWidth="400.0" promptText="Select patient..."
                                          style="-fx-background-color: #2C3E50; -fx-text-fill: white; -fx-prompt-text-fill: #BDC3C7; -fx-background-radius: 5;">
                                    <cursor>
                                        <javafx.scene.Cursor fx:constant="HAND" />
                                    </cursor>
                                </ComboBox>
                            </children>
                        </VBox>

                        <!-- Medication Details Row -->
                        <HBox spacing="20.0">
                            <children>
                                <!-- Medication Name -->
                                <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label text="Medication Name *" textFill="WHITE">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Label>
                                        <TextField fx:id="medicationNameField" prefWidth="300.0" promptText="Enter medication name..."
                                                   style="-fx-background-color: #2C3E50; -fx-text-fill: white; -fx-prompt-text-fill: #BDC3C7; -fx-background-radius: 5;">
                                        </TextField>
                                    </children>
                                </VBox>

                                <!-- Dosage -->
                                <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label text="Dosage *" textFill="WHITE">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Label>
                                        <TextField fx:id="dosageField" prefWidth="200.0" promptText="e.g., 500mg, 10ml..."
                                                   style="-fx-background-color: #2C3E50; -fx-text-fill: white; -fx-prompt-text-fill: #BDC3C7; -fx-background-radius: 5;">
                                        </TextField>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>

                        <!-- Frequency Row -->
                        <VBox spacing="8.0">
                            <children>
                                <Label text="Frequency *" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <ComboBox fx:id="frequencyComboBox" prefWidth="300.0" promptText="Select frequency..."
                                          style="-fx-background-color: #2C3E50; -fx-text-fill: white; -fx-prompt-text-fill: #BDC3C7; -fx-background-radius: 5;">
                                    <cursor>
                                        <javafx.scene.Cursor fx:constant="HAND" />
                                    </cursor>
                                </ComboBox>
                            </children>
                        </VBox>

                        <!-- Date Range Row -->
                        <HBox spacing="20.0">
                            <children>
                                <!-- Start Date -->
                                <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label text="Start Date *" textFill="WHITE">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Label>
                                        <DatePicker fx:id="startDatePicker" prefWidth="200.0"
                                                    style="-fx-background-color: #2C3E50; -fx-text-fill: white; -fx-background-radius: 5;">
                                            <cursor>
                                                <javafx.scene.Cursor fx:constant="HAND" />
                                            </cursor>
                                        </DatePicker>
                                    </children>
                                </VBox>

                                <!-- End Date -->
                                <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label text="End Date" textFill="WHITE">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Label>
                                        <DatePicker fx:id="endDatePicker" prefWidth="200.0" promptText="Optional end date"
                                                    style="-fx-background-color: #2C3E50; -fx-text-fill: white; -fx-background-radius: 5;">
                                            <cursor>
                                                <javafx.scene.Cursor fx:constant="HAND" />
                                            </cursor>
                                        </DatePicker>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>

                        <!-- Notes Section -->
                        <VBox spacing="8.0">
                            <children>
                                <Label text="Notes" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <TextArea fx:id="notesTextArea" prefHeight="100.0" prefWidth="600.0" wrapText="true"
                                          promptText="Optional notes or special instructions..."
                                          style="-fx-background-color: #2C3E50; -fx-text-fill: white; -fx-prompt-text-fill: #BDC3C7; -fx-background-radius: 5;">
                                </TextArea>
                                <Label text="Maximum 500 characters" textFill="#95A5A6">
                                    <font>
                                        <Font size="11.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>

                        <!-- Warning Notice -->
                        <HBox spacing="10.0" style="-fx-background-color: #F39C12; -fx-background-radius: 5; -fx-padding: 15;">
                            <children>
                                <Label text="⚠" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label text="Important Notice" textFill="WHITE">
                                            <font>
                                                <Font name="System Bold" size="13.0" />
                                            </font>
                                        </Label>
                                        <Label text="Updating dates or frequency will regenerate the medication schedule. Future medication logs will be updated accordingly."
                                               textFill="WHITE" wrapText="true">
                                            <font>
                                                <Font size="12.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>

                        <!-- Required Fields Notice -->
                        <Label text="* Required fields" textFill="#95A5A6">
                            <font>
                                <Font size="11.0" />
                            </font>
                        </Label>

                    </children>
                </VBox>

                <!-- Action Buttons -->
                <HBox alignment="CENTER_RIGHT" spacing="15.0" style="-fx-padding: 20 0 0 0;">
                    <children>
                        <!-- Cancel Button -->
                        <Button fx:id="cancelButton" onAction="#handleCancel" mnemonicParsing="false" prefHeight="40.0" prefWidth="120.0"
                                style="-fx-background-color: transparent; -fx-border-color: #95A5A6; -fx-border-width: 1; -fx-text-fill: #95A5A6; -fx-background-radius: 5; -fx-border-radius: 5;"
                                text="Cancel">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                            <cursor>
                                <javafx.scene.Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>

                        <!-- Update Button -->
                        <Button fx:id="updateButton" onAction="#handleUpdate" mnemonicParsing="false" prefHeight="40.0" prefWidth="140.0"
                                style="-fx-background-color: #27AE60; -fx-text-fill: white; -fx-background-radius: 5;"
                                text="Update Medication">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                            <cursor>
                                <javafx.scene.Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>
                    </children>
                </HBox>

            </children>
        </VBox>

    </VBox>
</ScrollPane>