<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="it.glucotrack.controller.AdminDashboardController"
            stylesheets="@/assets/css/table-styles.css"
            style="-fx-background-color: #2C3E50;">

    <!-- Left Sidebar -->
    <left>
        <VBox style="-fx-background-color: #16213e;" prefWidth="250" spacing="5">
            <padding>
                <Insets top="20" bottom="20" left="20" right="20" />
            </padding>

            <!-- User Profile -->

            <Button fx:id="profileBtn" onAction="#onProfileClick"
                    style="-fx-background-color: #0f1c35; -fx-background-radius: 10; -fx-padding: 15; -fx-cursor: hand; -fx-border-color: transparent;"
                    prefWidth="210">
                <graphic>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label style="-fx-font-size: 32px;" />
                        <VBox>
                            <Label fx:id="adminNameLabel"
                                   style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                            <Label fx:id="adminRoleLabel"
                                   style="-fx-text-fill: #8892b0; -fx-font-size: 12px;"/>
                        </VBox>
                    </HBox>
                </graphic>
            </Button>

            <!-- Navigation Menu -->
            <VBox spacing="5" style="-fx-padding: 10 0;">
                <Button fx:id="dashboardBtn" text="Dashboard"
                        style="-fx-background-color: #64b5f6; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 14px; -fx-padding: 12 20; -fx-cursor: hand; -fx-alignment: center-left;"
                        onAction="#onDashboardClick" prefWidth="210" />
            </VBox>

            <!-- Spacer -->
            <Region VBox.vgrow="ALWAYS"/>

            <!-- Logout -->
            <VBox spacing="5">
                <Button fx:id="logoutBtn" text="Logout"
                        style="-fx-background-color: transparent; -fx-text-fill: #8892b0; -fx-background-radius: 8; -fx-font-size: 14px; -fx-padding: 12 20; -fx-cursor: hand; -fx-alignment: center-left;"
                        onAction="#onLogoutClick" prefWidth="210" />
            </VBox>
        </VBox>
    </left>

    <!-- Search + Table -->
    <center>
        <StackPane fx:id="contentPane" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;" />
    </center>
</BorderPane>
